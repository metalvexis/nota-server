{
  "name": "nota-server",
  "version": "1.0.0",
  "description": "Simple Node.Js note-taking service",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "start": "node .dist/index.js"
  },
  "keywords": [
    "ts",
    "js",
    "node"
  ],
  "author": "James Saballegue",
  "license": "ISC",
  "dependencies": {
    "koa": "^2.15.0",
    "koa-body": "^6.0.1",
    "koa-joi-router": "^8.0.0"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.2",
    "@types/koa": "^2.14.0",
    "@types/koa-joi-router": "^8.0.7",
    "typescript": "^5.3.3"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "*.ts",
    "ignore": [
      "**/test/**",
      "**/docs/**"
    ],
    "delay": 2500,
    "exec": "npm run build && npm start"
  }
}
